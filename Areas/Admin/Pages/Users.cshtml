@page
@model DebateRoyale.Areas.Admin.Pages.UsersModel
@{
    ViewData["Title"] = "Gestione Utenti";
    Layout = "/Pages/Shared/_Layout.cshtml"; // O un layout specifico per l'admin
}

<h1>@ViewData["Title"]</h1>

@if (!string.IsNullOrEmpty(TempData["StatusMessage"] as string))
{
    <div class="alert alert-success" role="alert">
        @TempData["StatusMessage"]
    </div>
}

@if (ModelState.ErrorCount > 0)
{
    <div class="alert alert-danger">
        <ul class="mb-0">
            @foreach (var modelStateKey in ViewData.ModelState.Keys)
            {
                foreach (var error in ViewData.ModelState[modelStateKey].Errors)
                {
                    <li>@error.ErrorMessage</li>
                }
            }
        </ul>
    </div>
}


<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>Id</th>
            <th>Nome utente</th>
            <th>Email</th>
            <th>Vittorie</th>
            <th>Sconfitte</th>
            <th>Azioni</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model.Users)
        {
            <tr>
                <td>@user.Id</td>
                <td>@user.UserName</td>
                <td>@user.Email</td>
                <td>@user.Wins</td>
                <td>@user.Losses</td>
                <td>
                    @* <a asp-page="./EditUser" asp-route-id="@user.Id" class="btn btn-sm btn-primary">Modifica</a> *@
                    <form method="post" asp-page-handler="DeleteUser" asp-route-id="@user.Id" onsubmit="return confirm('Sei sicuro di voler eliminare l\'utente @user.UserName?');">
                        <button type="submit" class="btn btn-sm btn-danger">Elimina</button>
                    </form>
                    @* Aggiungi altri pulsanti per altre azioni *@
                </td>
            </tr>
        }
    </tbody>
</table>