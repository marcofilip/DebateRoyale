@page
@model DebateRoyale.Pages.UserStatsModel
@{
    ViewData["Title"] = "Statistiche Utente";
}

<div class="container py-4">
    <div class="text-center mb-4">
        <i class="fas fa-chart-bar fa-3x text-primary mb-3"></i>
        <h1 class="display-5">@ViewData["Title"]</h1>
        <p class="lead text-muted">Scopri chi è il vero campione di Debate Royale!</p>
    </div>

    @if (Model.UserStats.Any())
    {
        <div class="card shadow-sm">
            <div class="card-body p-0">
                <table class="table table-hover mb-0">
                    <thead class="table-light">
                        <tr>
                            <th scope="col">#</th>
                            <th scope="col"><i class="fas fa-user me-2"></i>Nome utente</th>
                            <th scope="col" class="text-center"><i class="fas fa-trophy me-2 text-success"></i>Vittorie</th>
                            <th scope="col" class="text-center"><i class="fas fa-thumbs-down me-2 text-danger"></i>Sconfitte</th>
                            <th scope="col" class="text-center"><i class="fas fa-comments me-2"></i>Dibattiti totali</th>
                            <th scope="col" class="text-center"><i class="fas fa-percentage me-2 text-info"></i>% Vittorie</th>
                        </tr>
                    </thead>
                    <tbody>
                        @{
                            var rank = 1;
                        }
                        @foreach (var stat in Model.UserStats)
                        {
                            <tr>
                                <th scope="row">@(rank++)</th>
                                <td>@stat.Username</td>
                                <td class="text-center">@stat.Wins</td>
                                <td class="text-center">@stat.Losses</td>
                                <td class="text-center">@stat.TotalDebates</td>
                                <td class="text-center">@stat.WinPercentage.ToString("0.0")%</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    }
    else
    {
        <div class="card shadow-sm">
            <div class="card-body text-center p-5">
                <i class="fas fa-users-slash fa-3x text-muted mb-3"></i>
                <h4>Nessuna statistica utente disponibile.</h4>
                <p class="text-muted">Partecipa ai dibattiti per vedere il tuo nome in classifica!</p>
            </div>
        </div>
    }
</div>