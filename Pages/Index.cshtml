@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div class="container py-5">
    <div class="row align-items-center">
        <div class="col-lg-6 mb-4 mb-lg-0">
            <div class="text-lg-start text-center">
                <h1 class="display-4 fw-bold mb-4">Welcome to <span class="text-primary">DebateRoyale</span></h1>
                <p class="lead mb-4">Engage in 1v1 textual debates, watch others vote, and see AI judges rate the performance!</p>
                
                <div class="d-flex gap-3 justify-content-lg-start justify-content-center">
                    @if (SignInManager.IsSignedIn(User))
                    {
                        <a class="btn btn-primary btn-lg" asp-page="/StanzeList">
                            <i class="fas fa-sign-in-alt me-2"></i>Enter a Debate Room
                        </a>
                    }
                    else
                    {
                        <a class="btn btn-primary btn-lg" asp-area="Identity" asp-page="/Account/Login">
                            <i class="fas fa-sign-in-alt me-2"></i>Login
                        </a>
                        <a class="btn btn-outline-primary btn-lg" asp-area="Identity" asp-page="/Account/Register">
                            <i class="fas fa-user-plus me-2"></i>Register
                        </a>
                    }
                </div>
            </div>
        </div>
        <div class="col-lg-6 d-none d-lg-block">
            <div class="card border-0 shadow">
                <div class="card-body p-4">
                    <div class="text-center mb-4">
                        <i class="fas fa-comments fa-3x text-primary mb-3"></i>
                        <h3>How It Works</h3>
                    </div>
                    <div class="row g-4">
                        <div class="col-md-6">
                            <div class="d-flex align-items-start">
                                <div class="me-3">
                                    <i class="fas fa-users text-primary"></i>
                                </div>
                                <div>
                                    <h5 class="fw-bold">Join a Room</h5>
                                    <p class="text-muted small">Enter a debate room with other participants</p>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="d-flex align-items-start">
                                <div class="me-3">
                                    <i class="fas fa-comment-dots text-primary"></i>
                                </div>
                                <div>
                                    <h5 class="fw-bold">Debate</h5>
                                    <p class="text-muted small">Engage in structured 1v1 debates</p>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="d-flex align-items-start">
                                <div class="me-3">
                                    <i class="fas fa-vote-yea text-primary"></i>
                                </div>
                                <div>
                                    <h5 class="fw-bold">Vote</h5>
                                    <p class="text-muted small">Vote for the most persuasive debater</p>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="d-flex align-items-start">
                                <div class="me-3">
                                    <i class="fas fa-robot text-primary"></i>
                                </div>
                                <div>
                                    <h5 class="fw-bold">AI Analysis</h5>
                                    <p class="text-muted small">Get debates analyzed by AI</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>