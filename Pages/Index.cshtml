@page
@model IndexModel
@{
    ViewData["Title"] = "Pagina principale";
}

<div class="container py-5">
    <div class="row align-items-center">
        <div class="col-lg-6 mb-4 mb-lg-0">
            <div class="text-lg-start text-center">
                <h1 class="display-4 fw-bold mb-4">Benvenuto su <span class="text-primary">DebateRoyale</span></h1>
                <p class="lead mb-4">Partecipa a dibattiti testuali 1 contro 1, guarda gli altri votare e scopri il giudizio dell'IA!</p>
                
                <div class="d-flex gap-3 justify-content-lg-start justify-content-center">
                    @if (SignInManager.IsSignedIn(User))
                    {
                        <a class="btn btn-primary btn-lg" asp-page="/StanzeList">
                            <i class="fas fa-sign-in-alt me-2"></i>Entra in una stanza
                        </a>
                    }
                    else
                    {
                        <a class="btn btn-primary btn-lg" asp-area="Identity" asp-page="/Account/Login">
                            <i class="fas fa-sign-in-alt me-2"></i>Accedi
                        </a>
                        <a class="btn btn-outline-primary btn-lg" asp-area="Identity" asp-page="/Account/Register">
                            <i class="fas fa-user-plus me-2"></i>Registrati
                        </a>
                    }
                </div>
            </div>
        </div>
        <div class="col-lg-6 d-none d-lg-block">
            <div class="card border-0 shadow">
                <div class="card-body p-4">
                    <div class="text-center mb-4">
                        <i class="fas fa-comments fa-3x text-primary mb-3"></i>
                        <h3>Come funziona</h3>
                    </div>
                    <div class="row g-4">
                        <div class="col-md-6">
                            <div class="d-flex align-items-start">
                                <div class="me-3">
                                    <i class="fas fa-users text-primary"></i>
                                </div>
                                <div>
                                    <h5 class="fw-bold">Entra in una stanza</h5>
                                    <p class="text-muted small">Partecipa a una stanza con altri utenti</p>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="d-flex align-items-start">
                                <div class="me-3">
                                    <i class="fas fa-comment-dots text-primary"></i>
                                </div>
                                <div>
                                    <h5 class="fw-bold">Dibatti</h5>
                                    <p class="text-muted small">Sfida un altro utente in un dibattito 1 contro 1</p>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="d-flex align-items-start">
                                <div class="me-3">
                                    <i class="fas fa-vote-yea text-primary"></i>
                                </div>
                                <div>
                                    <h5 class="fw-bold">Vota</h5>
                                    <p class="text-muted small">Vota chi ti ha convinto di più</p>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="d-flex align-items-start">
                                <div class="me-3">
                                    <i class="fas fa-robot text-primary"></i>
                                </div>
                                <div>
                                    <h5 class="fw-bold">Analisi IA</h5>
                                    <p class="text-muted small">Ottieni un'analisi automatica del dibattito</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>